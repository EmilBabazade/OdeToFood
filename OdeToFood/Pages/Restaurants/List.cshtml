@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}
@if(Model.Message != null)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<h1>Restaurant</h1>

<form method="get">
    <div class="form-row form-group">
        <div class="col-11">
            <input type="search" class="form-control" aria-label="Search" value="@Model.SearchTerm" asp-for="SearchTerm"/>
        </div>
        <div class="col-1">
            <button class="btn btn-default">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </div>
    </div>
</form>

@foreach(var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}

<a asp-page="./Edit" class="btn btn-primary">Add New</a>