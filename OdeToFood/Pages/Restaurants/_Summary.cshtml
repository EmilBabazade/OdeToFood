@using OdeToFood.Core
@model Restaurant
<div class="card mt-1 mb-3">
    <div class="card-heading">
        <h3 class="p-3">@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Location: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-lg no_padding" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="fa-solid fa-magnifying-glass-plus"></i>
        </a>
        <a class="btn btn-lg no_padding" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a class="btn btn-lg no_padding" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="fa-solid fa-trash"></i>
        </a>
    </div>
</div>